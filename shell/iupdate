#! /bin/bash
#
#

git_workflow () {
    git add .
    git commit -m "udpate"
    git pull
    git push
}

echo "Entering Library repo:"
cd ~/Library
if [[ `git status --porcelain` ]]; then
    git_workflow
else
    git pull
    git push
fi
echo -e "\n\n"

echo "Enterring fealpy: "
cd ~/work/fealpy/
if [[ `git status --porcelain` ]]; then
    git_workflow
else
    git pull
    git push
fi
echo -e "\n\n"

echo "Entering fealpy-example:"
cd ~/work/fealpy-example/
if [[ `git status --porcelain` ]]; then
    git_workflow
else
    git pull
    git push
fi
echo -e "\n\n"

echo "Entering whysc:"
cd ~/work/whysc/
if [[ `git status --porcelain` ]]; then
    git_workflow
else
    git pull
    git push
fi
echo -e "\n\n"

echo "Entering tool:"
cd ~/work/tool/
if [[ `git status --porcelain` ]]; then
    git_workflow
else
    git pull
    git push
fi
echo -e "\n\n"

echo "Entering whyvim:"
cd ~/work/whyvim/
if [[ `git status --porcelain` ]]; then
    git_workflow
else
    git pull
    git push
fi
echo -e "\n\n"

echo "Entering iwrite:"
cd ~/work/iwrite
if [[ `git status --porcelain` ]]; then
    git_workflow
else
    git pull
    git push
fi
echo -e "\n\n"

echo "Entering iwrite:"
cd ~/work/pisa/pisa2018
if [[ `git status --porcelain` ]]; then
    git_workflow
else
    git pull
    git push
fi
echo -e "\n\n"

echo "Entering whysite:"
